<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src" />
        <directory name="tests" />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="config" />

            <directory name="database" />
            <directory name="src/Infrastructure/Model" />
            <directory name="src/Infrastructure/Job" />

            <file name="src/Infrastructure/CustomCallableResolver.php" />
            <file name="src/Infrastructure/Listener/JobProcessedListener.php" />
            <file name="src/Infrastructure/Listener/JobProcessingListener.php" />
            <file name="src/Infrastructure/Listener/JobFailedListener.php" />
            <directory name="public" />
        </ignoreFiles>
    </projectFiles>

    <plugins>
        <pluginClass class="Psalm\PhpUnitPlugin\Plugin" />
    </plugins>

    <globals>
        <var name="_GET" type="array&lt;string, string|array&gt;" />
        <var name="_POST" type="array&lt;string, string|array&gt;" />
        <var name="_COOKIE" type="array&lt;string, string&gt;" />
        <var name="_SERVER" type="array&lt;string, string&gt;" />
    </globals>
</psalm>
